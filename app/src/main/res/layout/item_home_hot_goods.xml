<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_item_hop_goods"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:padding="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title_hot_goods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:text="双宫"
        android:textColor="@color/ColorTextTitle"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@id/iv_item_hop_goods"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_sub_title_hot_goods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="一级蚕丝被"
        app:layout_constraintBottom_toBottomOf="@+id/iv_item_hop_goods"
        app:layout_constraintLeft_toRightOf="@id/iv_item_hop_goods"
        app:layout_constraintTop_toTopOf="@+id/iv_item_hop_goods" />

    <TextView
        android:id="@+id/tv_hot_goods_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="12dp"
        android:text="12"
        android:textColor="@color/ColorPrice"
        app:layout_constraintBottom_toBottomOf="@id/iv_item_hop_goods"
        app:layout_constraintLeft_toRightOf="@id/iv_item_hop_goods" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/ColorGray"
        app:layout_constraintBottom_toTopOf="@id/iv_item_hop_goods"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>