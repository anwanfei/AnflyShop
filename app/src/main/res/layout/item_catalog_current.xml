<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_catalogcurrent_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_catalogcurrent_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/ColorTextTitle"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="@id/iv_catalogcurrent_item"
        app:layout_constraintRight_toRightOf="@id/iv_catalogcurrent_item"
        app:layout_constraintTop_toBottomOf="@id/iv_catalogcurrent_item" />

</androidx.constraintlayout.widget.ConstraintLayout>